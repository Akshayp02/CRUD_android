<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#2E2C2C"
    tools:context=".MainActivity">


    <TextView
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:id="@+id/TextView1"
        android:textSize="40sp"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:background="@drawable/textfield"
        android:textColor="#FFFFFF"
        ></TextView>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="106dp"
        android:id="@+id/TextView2"
        android:textAlignment="textEnd"
        android:paddingRight="10dp"
        android:paddingTop="40dp"
        android:layout_below="@id/TextView1"
        android:background="@drawable/textfield"
        android:textSize="40sp"
        android:textColor="#FFFFFF"
        ></TextView>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="AC"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/btnClear"
        android:layout_below="@id/TextView2"></Button>


    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text=""
        android:paddingLeft="35dp"
        android:gravity="center_horizontal|top"
        android:drawableStart="@drawable/ic_baseline_backspace_24"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:drawableTint="@android:color/holo_orange_dark"
        android:id="@+id/btnDel"
        android:layout_toRightOf="@id/btnClear"
        android:layout_below="@id/TextView2"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="%"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/btnPercentage"
        android:layout_toRightOf="@id/btnDel"
        android:layout_below="@id/TextView2"></Button>

    <Button
        android:layout_width="143dp"
        android:layout_marginLeft="2dp"
        android:layout_height="88dp"
        android:text="/"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/btnDiv"
        android:layout_toRightOf="@id/btnPercentage"
        android:layout_below="@id/TextView2"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="7"
        android:paddingTop="2dp"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/teal_200"
        android:id="@+id/btnSeven"
        android:layout_below="@id/btnClear"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="8"
        android:paddingTop="2dp"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/teal_200"
        android:id="@+id/btnEight"
        android:layout_toRightOf="@id/btnSeven"
        android:layout_below="@id/btnDel"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="9"
        android:paddingTop="2dp"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/teal_200"
        android:id="@+id/btnNine"
        android:layout_toRightOf="@id/btnEight"
        android:layout_below="@id/btnDel"></Button>

    <Button

        android:layout_width="143dp"
        android:layout_marginLeft="2dp"
        android:layout_height="88dp"
        android:text="x"
        android:paddingTop="2dp"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/btnMulti"
        android:layout_toRightOf="@id/btnNine"
        android:layout_below="@id/btnPercentage"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="4"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/teal_200"
        android:id="@+id/btnFour"
        android:layout_below="@id/btnSeven"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="5"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/teal_200"
        android:id="@+id/btnFive"
        android:layout_toRightOf="@id/btnFour"
        android:layout_below="@id/btnEight"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="6"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/teal_200"
        android:id="@+id/btnSix"
        android:layout_toRightOf="@id/btnFive"
        android:layout_below="@id/btnNine"></Button>

    <Button

        android:layout_width="143dp"
        android:layout_marginLeft="2dp"
        android:layout_height="88dp"
        android:text="-"
        android:background="@drawable/button"
        android:textSize="30dp"
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/btnSub"
        android:layout_toRightOf="@id/btnSix"
        android:layout_below="@id/btnMulti"></Button>

<!--    -->

    <Button
        android:id="@+id/btnOne"
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:layout_below="@id/btnFour"
        android:layout_marginTop="2dp"
        android:background="@drawable/button"
        android:text="1"
        android:textColor="@color/teal_200"
        android:textSize="25sp"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="2"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/teal_200"
        android:id="@+id/btnTwo"
        android:layout_toRightOf="@id/btnOne"
        android:layout_below="@id/btnFive"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="3"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/teal_200"
        android:id="@+id/btnTree"
        android:layout_toRightOf="@id/btnTwo"
        android:layout_below="@id/btnSix"></Button>

    <Button

        android:layout_width="143dp"
        android:layout_marginLeft="2dp"
        android:layout_height="88dp"
        android:text="+"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/btnAdd"
        android:layout_toRightOf="@id/btnTree"
        android:layout_below="@id/btnSub"></Button>


    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="0"
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/teal_200"
        android:id="@+id/btnZero"
        android:layout_below="@id/btnOne"></Button>

    <Button
        android:layout_width="88dp"
        android:layout_height="88dp"
        android:text="."
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@color/teal_200"
        android:id="@+id/btnDot"
        android:layout_toRightOf="@id/btnZero"
        android:layout_below="@id/btnTwo"></Button>

    <Button

        android:layout_width="231dp"
        android:layout_marginLeft="2dp"

        android:layout_height="88dp"
        android:text="="
        android:background="@drawable/button"
        android:textSize="25sp"
        android:textColor="@android:color/holo_orange_dark"
        android:id="@+id/btnEquals"
        android:layout_toRightOf="@id/btnDot"
        android:layout_below="@id/btnTree"></Button>

</RelativeLayout>